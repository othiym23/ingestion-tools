#!/usr/bin/env ruby
script_path = __FILE__
script_path = File.readlink(script_path) if File.symlink?(script_path)
$:.unshift(File.join(File.dirname(script_path), '../../mp3info/lib'))

require 'yaml'
require 'mp3info'

ARGV.each do |path|
  puts YAML.dump(Mp3Info.new(File.expand_path(path)).tag2)
end
